@model List<Negocio.Empleador.ListRecepcion>
@{
    ViewBag.Title = "Lista_recepcion";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empleado.cshtml";
}

 

<div class="container">


    <h2>Inventario Hostal</h2>

    
    <div class="table-responsive">
        <table id="Tabla" class="table table-striped table-hover table-sm">
            <thead class="table-dark">
                <tr>
                    <th>id Recepcion</th>
                    <th>Id Producto </th>
                    <th>Nombre producto</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id_recepcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_productos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad) 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
