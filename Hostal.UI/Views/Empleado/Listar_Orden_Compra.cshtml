@model List<Negocio.Empleador.ListOC>

@{
    ViewBag.Title = "Listar_Orden_Compra";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empleado.cshtml";
}

<div class="container">


    <h2>Control de huespedes</h2>

    <hr class="bg-warning" />

    <div class="table-responsive">
        <table id="Tabla" class="table table-striped table-hover table-sm">
            <thead class="table-dark">
                <tr>

                    <th>
                        N° Orden
                    </th>
                    <th>
                        Fecha Ingreso
                    </th>
                    <th>
                        Fecha Salida
                    </th>
              
                    <th>
                        Nombre Huesped
                    </th>
                    <th>
                        Nombre Empresa
                    </th>
         
                    <th>
                        Precio Habitacion
                    </th>
                    <th>
                        Estado OC
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>


                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Num_OC)
                    </td>

                    <td>
                        @(String.Format("{0:dd/MM/yyyy}", item.Fecha_Entrada))
                    </td>

                    <td>
                        @(String.Format("{0:dd/MM/yyyy}", item.Fecha_salida))
                    </td>
              
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_H)
                        @Html.DisplayFor(modelItem => item.APELLIDOPATERNO_H)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_EMPRESA)
                    </td>

         

                    <td>

                        $@Html.DisplayFor(modelItem => item.total_habitacion, new { @type = "number" })
                    </td>


                    @if (item.id_estado_OC == 1)
                    {
                        <td>

                            @Html.DisplayFor(modelItem => item.estado_OC)
                        </td>

                        <td>
                            @Html.ActionLink("Check-In", "CheckIn", new { id = item.Num_OC }, new { @class = "btn btn-warning btn-block" })
                        </td>
                    }
                    @if (item.id_estado_OC == 2)
                    {
                        <td>

                            @Html.DisplayFor(modelItem => item.estado_OC)
                        </td>
                        <td>
                            @Html.ActionLink("Check-Out", "CheckOut", new { id = item.Num_OC }, new { @class = "btn btn-danger btn-block" })
                        </td>
                    }
                    <td>
                        @Html.ActionLink("Detalle", "Verificar_Orden_Compra", new { id = item.Num_OC }, new { @class = "btn btn-secondary btn-block" })
                    </td>
                </tr>
                }

            </tbody>

        </table>

    </div>
</div>