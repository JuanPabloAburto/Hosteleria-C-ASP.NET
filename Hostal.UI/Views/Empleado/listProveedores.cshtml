
@{
    ViewBag.Title = "listProveedores";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empleado.cshtml";
}



<div class="text-left container">

</div>
<div class="row container">
    <div class="col-md-12">
        <h2><strong>Lista</strong> Proveedor</h2>
        <hr class="bg-warning" />
    </div>
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="Tabla" class="table table-striped table-hover table-sm">
                <thead class="text-white bg-dark">
                    <tr>
                        <th>Rut Provedor</th>
                        <th>Nombre Proveedor</th>
                        @*<th>region</th>*@
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Empresa proveedor </th>
                        <th>Telefono</th>
                        <th>Email</th>
                        @*<th>estado</th>*@
                        <th>Crear</th>
                        <th>Ver</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var elemento in Model)
                    {
                    <tr>
                        <td>@elemento.rut_prov                </td>
                        <td>@elemento.nombre_prov             </td>
                        @*<td>@elemento.region                  </td>*@
                        <td>@elemento.apellidoP               </td>
                        <td>@elemento.apellidoM               </td>
                        <td>@elemento.empresa </td>
                        <td>@elemento.telefono                </td>
                        <td>@elemento.email                   </td>
                        @*<td>@elemento.estado                  </td>*@
                        <td>
                           @Html.ActionLink("Pedido", "Crear_Pedido", new { id = @elemento.rut_prov }, new { @class = "btn btn-warning" })
                        </td>
                        <td>
                            @Html.ActionLink("productos", "Lista_ProductosProveedor", new { id = @elemento.rut_prov }, new { @class = "btn btn-secondary" })
                        </td>

                    </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>