@model HOSTAL.ENTIDADES.DETALLE_PRODUCTOS

@{
    ViewBag.Title = "Crear_DetalleProductos";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empleado.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal row container">

        <div class="col-sm-12">
            <div class="text-danger">
                <p class="text-center">
                    @ViewBag.Error
                </p>
            </div>
        </div>



        <div class="col-md-12">
            <h2><strong>Solicitar</strong> Productos</h2>
        </div>
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-3">
            <label class="control-label col-md-12">Cantidad Solicitada</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.CANTIDAD_SOLICITADA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CANTIDAD_SOLICITADA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-3">
            <label class="control-label col-md-12"> ID PRODUCTO</label>
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.ID_PRODUCTO, ViewBag.proc as IEnumerable<SelectListItem>, "Selecionar Producto", new { @class = "form-control" })

            </div>
        </div>

        @*   <div class="form-group col-md-3">
                <label class="control-label col-md-12">ORDEN PEDIDO</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ID_ORDENPEDIDO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID_ORDENPEDIDO, "", new { @class = "text-danger" })
                </div>
            </div> *@






    </div>

    <div class="form-group col-md-6">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Agregar" class="btn btn-warning" id="BtnEnviar" />

            <a class="btn btn-secondary mx-2" href="/Empleado/listProveedores">Terminar y enviar orden</a>
        </div>
    </div>
}
<div>

</div>



@* ----------------------- LISTADO DETALLE COMPRA--------------------------------------- *@


<div class="row container">

    <div class="col-md-12">
        <div class="col-md-12">
            <h2><strong>Lista</strong> Productos</h2>
        </div>


        <div class="table-responsive">
            <table id="Tabla" class="table table-striped table-hover table-sm">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Número detalle</th>
                        <th>Cantidad Solicitada </th>
                        <th>Nombre producto     </th>
                        <th>Precio Producto     </th>
                        <th>Precio total productos</th>
                        <th>Funciones </th>

                    </tr>
                </thead>


                <tbody>
                    @foreach (var elemento in (List<Negocio.Empleador.ListadoProductos>)ViewBag.listorden)
                    {
                    <tr>
                        <td>@elemento.id_Detalle              </td>
                        <td>@elemento.cantidad_solicitada     </td>
                        <td>@elemento.nombre_producto         </td>
                        <td>@elemento.precio_producto         </td>
                        <td>@elemento.total_productos         </td>
                        <td>  @Html.ActionLink("Eliminar", "Eliminar_Detalle_Producto", new { id_ped = @elemento.id_Detalle }, new { @class = "btn btn-danger btn-block" })        </td>




                    </tr>


                    }
                </tbody>
            </table>
        </div>

    </div>
</div>