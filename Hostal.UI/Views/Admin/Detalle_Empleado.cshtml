@model Negocio.Admin.LisEmpleado.ListEmpleado

@{
    ViewBag.Title = "Detalle_Empleado";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}


    <div class="container">
        <h2><strong>Detalle</strong> Empleado</h2>

        <hr />
        <div class="row container">
            <div class=" col-md-6">
                <h5>
                    <strong>
                        Nombre Empleado
                    </strong>
                </h5>
                <h6>
                    @Html.DisplayFor(model => model.nombre) @Html.DisplayFor(model => model.apellidoP) @Html.DisplayFor(model => model.apellidoM)
                </h6>
            </div>
            <div class="col-md-6">
                <h5>
                    <strong>
                        Fecha Nacimiento
                    </strong>
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.fechaNacimiento)
                </h6>
            </div>

            <div class=" col-md-6">
                <h5>
                    <strong>
                        Telefono
                    </strong>
                </h5>
                <h6>
                    @Html.DisplayFor(model => model.telefono) 
                </h6>
            </div>
            <div class="col-md-6">
                <h5>
                    <strong>
                        Sexo
                    </strong>
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.Sexo)
                </h6>
            </div>


            <div class="col-md-6">
                <h5>
                    <strong>
                        Estado Usuario
                    </strong>
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.Estado)
                </h6>
            </div>

            <div class="col-md-6">
                <h5>
                    <strong>
                        Tipo Usuario
                    </strong>
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.TipoC)
                </h6>
            </div>

            <div class="col-md-6">
                <h5>
                    <strong>
                        Fecha Ingreso
                    </strong>
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.fechaIngreso)
                </h6>
            </div>
        </div>



        <hr />


    </div>
    <div class="container row">
        <div class="col-md-3">
            @Html.ActionLink("Editar", "Editar_Empleado", new { id = Model.rut }, new { @class = "btn btn-warning" })
            <a class="btn btn-secondary mx-2" href="/admin/listEmpleado">Volver</a>

        </div>
    
    </div>
  
