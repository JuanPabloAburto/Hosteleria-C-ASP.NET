@model HOSTAL.ENTIDADES.EMPRESA

@{
    ViewBag.Title = "Crear_Empresa";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}

<div class="row container">
    <div class="col-sm-12">

        <div class="col-sm-12">
            <div class="text-danger">
                <p class="text-center">
                    @ViewBag.Error
                </p>
            </div>
        </div>



        @using (Html.BeginForm())
        {
            <form method="post">



                @Html.AntiForgeryToken()

                <div class="form-horizontal row container">
                    <hr />

                    <div class="col-md-12">
                        <h2><strong>Crear</strong> Empresa</h2>
                        <hr class="bg-warning" />
                    </div>



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Rut</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.RUT_E, new { htmlAttributes = new { @class = "form-control", @id = "textRutEmp", @Type = "text", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.RUT_E, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Nombre</label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NOMBRE_E, new { htmlAttributes = new { @class = "form-control", @id = "textNombreEmp", @Type = "text", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.NOMBRE_E, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Razón social</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RAZONSOCIAL_E, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoPaterno", @Type = "text", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.RAZONSOCIAL_E, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Telefono</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TELEFONO_E, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoMaterno", @Type = "text", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.TELEFONO_E, "", new { @class = "text-danger" })
                        </div>
                    </div>





                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Email</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @id = "textFechaNacimiento", @Type = "email" } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Estado cuenta</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.USUARIO.ID_ESTADOUSUARIO, ViewBag.Estado as IEnumerable<SelectListItem>, "Selecionar Estado", new { @class = "form-control" })

                        </div>
                    </div>



                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Region Empresa</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.ID_REGION, ViewBag.Region as IEnumerable<SelectListItem>, "Selecionar", new { @class = "form-control", @required = "required" })

                        </div>
                    </div>


                    <div class="form-group col-md-3">
                        <label class="control-label col-md-12">Contraseña Usuario</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.USUARIO.CONTRASEÑA, new { htmlAttributes = new { @class = "form-control", @id = "textContrasena", @Type = "password", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.USUARIO.CONTRASEÑA, "", new { @class = "text-danger" })
                        </div>
                    </div>








                    <div class="form-group col-md-12">
                        <div class="col-md-offset-2 col-md-10">


                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ConfirmacionEmpresa">
                                Guardar
                            </button>

                            <a class="btn btn-secondary mx-2" href="/admin/ListProveedores">Volver</a>
                        </div>
                    </div>



                    <div class="modal" id="ConfirmacionEmpresa" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">¿Esta segura de crear este Empresa?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Se creará un registro del Empresa
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Si, crear" class="btn btn-warning" id="BtnEnviar" />

                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </form>
        }


    </div>
</div>