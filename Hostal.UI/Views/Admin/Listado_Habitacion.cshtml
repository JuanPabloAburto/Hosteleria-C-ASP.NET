@model List<Negocio.Admin.ListHabitacion>

@{
    ViewBag.Title = "Listado_Habitacion";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}

<div class="row container">

    <div class="col-md-12">
        <div class="col-md-12">
            <h2><strong>Lista</strong> Habitaciones</h2>
        </div>


        <div class="table-responsive">
            <table id="Tabla" class="table table-striped table-hover table-sm">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Número</th>
                        <th>Precio </th>
                        <th>Estado</th>
                        <th>Funciones </th>

                    </tr>
                </thead>


                <tbody>
                    @foreach (var elemento in Model)
                    {
                    <tr>
                        <td>@elemento.NUMERO_HB          </td>
                        <td>@elemento.PRECIO_HB           </td>
                        <td>@elemento.ESTADO         </td>



                        <td>
                            @Html.ActionLink("Editar", "Editar_Habitacion", new { id = @elemento.NUMERO_HB }, new { @class = "btn btn-secondary btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Detalle", "Detalle_Habitacion", new { id = @elemento.NUMERO_HB }, new { @class = "btn btn-secondary btn-block" })
                        </td>
                    </tr>
                        

                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

