@model HOSTAL.ENTIDADES.PROVEEDOR

@{
    ViewBag.Title = "Crear_Proveedor";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="text-danger">
            <p class="text-center">
                @ViewBag.Error
            </p>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal container row">

    <div class="form-group col-md-12">
        <h2><strong>Crear</strong> Proveedor</h2>
        <hr class="bg-warning" />
    </div>


    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Nombre Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NOMBRE_PROV, new { htmlAttributes = new { @class = "form-control", @id = "textNombreProv", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.NOMBRE_PROV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Apellido Paterno Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.APELLIDOPATERNO_PROV, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoPaterno", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.APELLIDOPATERNO_PROV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Apellido Materno Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.APELLIDOMATERNO_PRVO, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoMaterno", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.APELLIDOMATERNO_PRVO, "", new { @class = "text-danger" })
        </div>
    </div>



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Rut Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RUT_PROV, new { htmlAttributes = new { @class = "form-control", @id = "textRutProv", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.RUT_PROV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Empresa de proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EMPRESA, new { htmlAttributes = new { @class = "form-control", @id = "textRutProv", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.EMPRESA, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Telefono Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TELEFONO_PROV, new { htmlAttributes = new { @class = "form-control", @id = "textTelefonoProv", @Type = "tel", @required = "required" } })
            @Html.ValidationMessageFor(model => model.TELEFONO_PROV, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Email Proveedor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.USUARIO_EMAIL, new { htmlAttributes = new { @class = "form-control", @id = "textUsuarioEmail", @Type = "text", @required = "required" } })
            @Html.ValidationMessageFor(model => model.USUARIO_EMAIL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Region Empleado</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_REGION, ViewBag.Region as IEnumerable<SelectListItem>, "Selecionar", new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="text-left col-md-12">
        <hr class="bg-warning" />

        <h4>
            <strong>
                USUARIO
            </strong>
        </h4>

    </div>


    <div class="form-group col-md-3">
        <label class="control-label col-md-12">Contraseña usuario</label>
        <div class="col-md-12">
            @Html.PasswordFor(model => model.USUARIO.CONTRASEÑA, new { htmlAttributes = new { @class = "form-control col-md-12", @id = "textContrasena", @Type = "password", @required = "required" } })
            @Html.ValidationMessageFor(model => model.USUARIO.CONTRASEÑA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-3">
        <label class="control-label col-md-12">Tipo Usuario</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.USUARIO.ID_TIPOUSUARIO, ViewBag.Tipo as IEnumerable<SelectListItem>, "Selecionar Tipo", new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label col-md-12">Estado Usuario</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.USUARIO.ID_ESTADOUSUARIO, ViewBag.Estado as IEnumerable<SelectListItem>, "Selecionar Estado", new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-10">


            <!-- Button trigger modal -->
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ConfirmacionProv">
                Guardar
            </button>

            <a class="btn btn-secondary mx-2" href="/admin/ListProveedores">Volver</a>
        </div>
    </div>



    <div class="modal" id="ConfirmacionProv" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">¿Esta segura de crear este proveedor?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Se creará un registro del proveedor
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Si, crear" class="btn btn-warning" id="BtnEnviar" />

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



</div>
    }

    <div>
    </div>

    