@model Negocio.Admin.ListEmpresa.ListEmpresa

@{
    ViewBag.Title = "Editar_Empresa";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container row">
        <div class="col-md-12">
            <h2><strong>Editar</strong> Empresa</h2>

        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-md-6">
            <label class="control-label col-md-12">Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_E, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_E, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label class="control-label col-md-12">EMAIL</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label class="control-label col-md-12">Razón social</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RAZONSOCIAL_E, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RAZONSOCIAL_E, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label class="control-label col-md-12">Telefono Proveedor</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TELEFONO_E, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TELEFONO_E, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-6">
            <label class="control-label col-md-12">Region Empresa</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_region, ViewBag.Region as IEnumerable<SelectListItem>, "Selecionar Región", new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label col-md-12">Estado Empresa</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_estado, ViewBag.Estado as IEnumerable<SelectListItem>, "Selecionar Estado", new { @class = "form-control" })

            </div>
        </div>




        <div class="form-group col-md-12">
            <div class="col-md-offset-2 col-md-10">


                <!-- Button trigger modal -->
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ConfirmacionEmp">
                    Guardar cambios
                </button>

                <a class="btn btn-secondary mx-2" href="/admin/ListEmpleado">Volver</a>
            </div>
        </div>



        <div class="modal" id="ConfirmacionEmp" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">¿Está segura de Editar ésta empresa?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Se Editará un registro del empresa seleccionado
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Si, Editar" class="btn btn-warning" id="BtnEnviar" />

                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

