@model HOSTAL.ENTIDADES.EMPLEADO 

@{
    ViewBag.Title = "Create";



    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Admin.cshtml";
}



<div class="row container">

    <div class="col-sm-12">
        <div class="text-danger">
            <p class="text-center">
                @ViewBag.Error
            </p>
        </div>
    </div>

    <div class="col-sm-12">

        @using (Html.BeginForm())
        {
    <form method="post">



        @Html.AntiForgeryToken()

        <div class="form-horizontal row container">
            <hr />

            <div class="col-md-12">
                <h2><strong>Crear</strong> Empleado</h2>
                <hr class="bg-warning" />
            </div>



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Rut</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.RUT_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textRutEmp", @Type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.RUT_EMP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Nombre</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NOMBRE_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textNombreEmp", @Type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE_EMP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Apellido Paterno</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.APELLIDOPATERNO_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoPaterno", @Type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.APELLIDOPATERNO_EMP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Apellido Materno</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.APELLIDOMATERNO_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoMaterno", @Type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.APELLIDOMATERNO_EMP, "", new { @class = "text-danger" })
                </div>
            </div>





            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Fecha Nacimiento Empleado</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FECHANACIMIENTO_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textFechaNacimiento", @Type = "date", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.FECHANACIMIENTO_EMP, "", new { @class = "text-danger" })
                </div>
            </div>

 

            <div class="form-group col-md-6">
                <label class="control-label col-md-12">Email</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.USUARIO_EMAIL, new { htmlAttributes = new { @class = "form-control", @id = "textUsuarioEmail", @Type = "email", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.USUARIO_EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label col-md-12">Sexo Empleado</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ID_SEXO, ViewBag.Sexo as IEnumerable<SelectListItem>, "Selecionar sexo", new { @class = "form-control", @required = "required" })

                </div>
            </div>


            <div class="form-group col-md-6">
                <label class="control-label col-md-12">Telefono Empleado</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TELEFONO_EMP, new { htmlAttributes = new { @class = "form-control", @id = "textTelefono", @Type = "tel", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TELEFONO_EMP, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="container col-md-12">
                <hr class="bg-warning" />

                <h4>
                    <strong>USUARIO</strong>
                </h4>

            </div>

            <br />
            <div class="form-group col-md-6">
                <label class="control-label col-md-12">Estado Usuario</label>
                <div class="col-md-13">
                    @Html.DropDownListFor(model => model.USUARIO.ID_ESTADOUSUARIO, ViewBag.Estado as IEnumerable<SelectListItem>, "Estado Cuenta", new { @class = "form-control", @required = "required" })

                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label col-md-12">Contraseña Usuario</label>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.USUARIO.CONTRASEÑA, new { htmlAttributes = new { @class = "form-control", @id = "textContrasena", @Type = "password", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.USUARIO.CONTRASEÑA, "", new { @class = "text-danger" })
                </div>
            </div>


 

            <div class="form-group col-md-12">
                <div class="col-md-offset-2 col-md-10">


                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ConfirmacionEmp">
                        Guardar
                    </button>

                    <a class="btn btn-secondary mx-2" href="/admin/ListEmpleado">Volver</a>
                </div>
            </div>



            <div class="modal" id="ConfirmacionEmp" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">¿Esta segura de crear este Empleado?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Se creará un registro del empleado
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Si, crear" class="btn btn-warning" id="BtnEnviar" />

                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </form>
        }


    </div>
</div>