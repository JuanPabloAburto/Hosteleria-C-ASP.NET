@model HOSTAL.ENTIDADES.HUESPED

@{
    ViewBag.Title = "CrearHuesped";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empresa.cshtml";
}


@ViewBag.Error;
    <div class="row container">

        <div class="col-sm-12">
            <div class="text-danger">
                <p class="text-center">
                    @ViewBag.Error
                </p>
            </div>
        </div>


        <div class="col-sm-12">


            @using (Html.BeginForm())
            {
                <form method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal container row">
                        <div class="col-md-12">
                            <h2><strong>Crear</strong> huesped</h2>
                            <hr class="bg-warning" />
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">
                                Rut
                            </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RUT_H, new { htmlAttributes = new { @class = "form-control", @id = "textRut", @Type = "text", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.RUT_H, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">
                                Nombre
                            </label>                        <div class="col-md-10">
                                @Html.EditorFor(model => model.NOMBRE_H, new { htmlAttributes = new { @class = "form-control", @id = "textNombre", @Type = "text", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.NOMBRE_H, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">
                                Apellido Paterno
                            </label>                        <div class="col-md-10">
                                @Html.EditorFor(model => model.APELLIDOPATERNO_H, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoPaterno", @Type = "text", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.APELLIDOPATERNO_H, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">
                                Apellido Materno
                            </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.APELLIDOMATERNO_H, new { htmlAttributes = new { @class = "form-control", @id = "textApellidoMaterno", @Type = "text", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.APELLIDOMATERNO_H, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">
                                Telefono
                            </label>                        <div class="col-md-10">
                                @Html.EditorFor(model => model.TELEFONO_H, new { htmlAttributes = new { @class = "form-control", @id = "textTelefono", @type = "tel", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.TELEFONO_H, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EMPRESA.RUT_E, "EMPRESA_RUT_E", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RUT_E, new { htmlAttributes = new { @class = "form-control", @id = "textrRutEmpresa", @Type = "text" } })
                @Html.ValidationMessageFor(model => model.RUT_E, "", new { @class = "text-danger" })
            </div>
        </div>
                        *@
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-12">Sexo Empleado</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.ID_SEXO, ViewBag.Sexo as IEnumerable<SelectListItem>, "Selecionar sexo", new { @class = "form-control", @required = "required" })

                            </div>
                        </div>


                        <div class="form-group col-md-12">
                            <div class="col-md-offset-2 col-md-10">


                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ConfirmacionEmp">
                                    Guardar Huesped
                                </button>

                                <a class="btn btn-secondary mx-2" href="/admin/ListHuesped">Volver</a>
                            </div>
                        </div>



                        <div class="modal" id="ConfirmacionEmp" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">¿Esta segura de crear este Huesped?</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Se creará un huesped en el sistema
                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" value="Si, Crear" class="btn btn-warning" id="BtnEnviar" />

                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                </form>
            }

        </div>
    </div>