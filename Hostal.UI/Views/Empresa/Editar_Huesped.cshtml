@model Negocio.Empresa.ListHuesped

@{
    ViewBag.Title = "Editar_Huesped";
    Layout = "~/Views/Shared/Layout_Usuarios/_Layout_Home_Empresa.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container mt-5">
    <div class="text-center">
        <h4>Editar Huesped</h4>
        <br />
     </div>
    <div class="form-horizontal row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RUT_H)

        <div class="form-group col-sm-12 col-md-6">
            <label class="control-label">Nombre Huesped</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_H, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_H, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-6">
            <label class="control-label">Apellido Paterno Huesped</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.APELLIDOPATERNO_H, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.APELLIDOPATERNO_H, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-6">
            <label class="control-label">Apellido Materno Huesped</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.APELLIDOMATERNO_H, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.APELLIDOMATERNO_H, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-12 col-md-6">
            <label class="control-label">Telefono Huesped</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TELEFONO_H, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TELEFONO_H, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.RUT_E)



        <div class="form-group col-sm-12 col-md-12">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                @Html.ActionLink("Volver", "listHuesped", new { @class = "btn btn-dark" })

            </div>
        </div>
    </div>


</div>
}