
@{
    ViewBag.Title = "Empresa";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


    <body>

        <div class="login-page">
            <div class="container " style="padding:0 250;">
                <div class="log-box ">
                    <div class="row">
                        <div class="col-xl-12 col-sm-12 col-12 pad-right-0 ">
                            <div class="align-middle text-center" style="margin:20px">
                                <img  width="300px" src="~/Content/Templates1/assets/img/Usuarios/Empresa.jpg" alt="">
                            </div>
                        </div>
                        <div class="col-xl-12 col-sm-12 col-12 pad-left-0">
                            <div class="log-content text-center">
                                <h1>LOGIN EMPRESA </h1>
                                <form action="@Url.Content("~/Home/LoginEmpresa")" method="post">
                                    <div class="log-body row">
                                        <div class="form-group col-md-12">
                                            <label>Email</label>
                                            <input type="email" name="EMAIL" id="exampleInputEmail1" class="form-control" required placeholder="Email">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Password</label>
                                            <input type="password" name="CONTRASEÑA" id="exampleInputPassword1" class="form-control" required placeholder="Password">
                                        </div>
                                        <div class="text-center col-md-9">
                                            <button type="submit" class="mb-2 btn btn-dark btn-block">Acceder</button>
                                        </div>
                                        <div class="text-center col-md-3">

                                            <a class="btn btn-danger btn-block" href="/Home">Volver</a>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>


            </div>
        </div>





        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    </body>


